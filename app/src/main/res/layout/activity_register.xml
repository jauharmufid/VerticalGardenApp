<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/logoverticalgarden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_pta_1"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/Linlay2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/logoverticalgarden"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <EditText
                android:id="@+id/signupfullname"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="Enter Your Full Name"
                android:inputType="textPersonName"
                android:paddingLeft="24dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/signupemail"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="Enter Your Email"
                android:inputType="textEmailSubject"
                android:paddingLeft="24dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/signupcreatepass"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/key"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:paddingRight="70dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/signupconfirmpass"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/check"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:paddingRight="70dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
        </LinearLayout>
        <Button
            android:id="@+id/signupnbutton"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:layout_below="@id/Linlay2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:text="Sign Up"
            android:fontFamily="@font/intersemibold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/Linlay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/signupnbutton"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/allreadyhaveaccount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="Already Have An Account?"
                android:fontFamily="@font/interregular"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/signinonsignup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="Sign In"
                android:fontFamily="@font/interregular"
                android:textSize="16dp"
                android:textColor="@color/Green"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/eyeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/logoverticalgarden"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="250dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/desc_eye_button"
            android:src="@drawable/eye_close" />
    </RelativeLayout>
</ScrollView>