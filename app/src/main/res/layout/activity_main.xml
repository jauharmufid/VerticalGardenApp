<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/logoverticalgarden"
            android:layout_width="wrap_content"
            android:layout_height="253dp"
            android:src="@drawable/logobaru"
            android:paddingTop="40dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo_vertical_garden"/>

        <LinearLayout
            android:id="@+id/Linlay1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logoverticalgarden"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addemail"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:background="@drawable/button_shape2"
                android:drawableStart="@drawable/mail"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress"
                android:paddingStart="24dp"
                android:paddingEnd="30dp"
                android:textColorHint="@color/Green"
                android:textSize="16sp"
                android:autofillHints="emailAddress"/>
            <EditText
                android:id="@+id/addpass"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape2"
                android:drawableStart="@drawable/key"
                android:drawablePadding="18dp"
                android:fontFamily="@font/interregular"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingStart="24dp"
                android:paddingEnd= "75dp"
                android:textColorHint="@color/Green"
                android:textSize="16sp"
                android:autofillHints="password" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/eyeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/logoverticalgarden"
            android:layout_marginTop="130dp"
            android:layout_marginStart="250dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/desc_eye_button"
            android:src="@drawable/eye_close" />
        <ImageButton
            android:id="@+id/logingoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/Linlay1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/button_google"
            android:src="@drawable/logogoogle"
            android:scaleType="centerInside"/>
<!--        <TextView-->
<!--            android:id="@+id/forgotpass"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_below="@id/logingoogle"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:fontFamily="@font/interregular"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginBottom="30dp"-->
<!--            android:text="@string/text_button_forgot_password"-->
<!--            android:textSize="16sp"/>-->
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:layout_below="@id/logingoogle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:text="@string/buttonlogin"
            android:fontFamily="@font/intersemibold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="@string/text_button_sign_up"
            android:fontFamily="@font/interregular"
            android:textSize="16sp"
            android:layout_below="@id/loginbutton"
            android:layout_marginTop="20dp"
            android:textColor="@color/Green"/>
    </RelativeLayout>
</ScrollView>