<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/logoverticalgarden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_pta_1"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/Linlay1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logoverticalgarden"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addemail"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="25dp"
                android:fontFamily="@font/interregular"
                android:gravity="start|center_vertical"
                android:hint="Enter Your Email"
                android:inputType="textEmailSubject"
                android:paddingLeft="24dp"
                android:paddingRight="30dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/addpass"
                android:layout_width="280dp"
                android:layout_height="67dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_shape2"
                android:drawableLeft="@drawable/key"
                android:drawablePadding="18dp"
                android:fontFamily="@font/interregular"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="24dp"
                android:paddingRight= "75dp"
                android:textColorHint="@color/Green"
                android:textSize="16dp" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/eyeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/logoverticalgarden"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="250dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/desc_eye_button"
            android:src="@drawable/eye_close" />
        <ImageButton
            android:id="@+id/logingoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/Linlay1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription=""
            android:src="@drawable/logogoogle"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/logingoogle"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:fontFamily="@font/interregular"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="Forgot Password?"
            android:textSize="16dp"/>
        <Button
            android:id="@+id/loginbutton"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:layout_below="@id/forgotpass"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:text="Login"
            android:fontFamily="@font/intersemibold"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:fontFamily="@font/interregular"
            android:textSize="16dp"
            android:layout_below="@id/loginbutton"
            android:layout_marginTop="20dp"
            android:textColor="@color/Green"/>
    </RelativeLayout>
</ScrollView>