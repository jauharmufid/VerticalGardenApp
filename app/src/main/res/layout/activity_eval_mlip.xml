<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvalMLIP">
    <TextView
        android:id="@+id/tekspanduan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/interregular"
        android:padding="10dp"
        android:text="please point the camera at the plant"
        android:textSize="15sp"
        android:textColor="@color/black" />
    <SurfaceView
        android:id="@+id/kamera"
        android:layout_width="409dp"
        android:layout_height="379dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tekspanduan1" />
    <TextView
        android:id="@+id/tekspanduan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/intersemibold"
        android:layout_below="@+id/kamera"
        android:padding="10dp"
        android:text="PREDICTION :"
        android:textSize="15sp"
        android:textColor="@color/black" />
    <LinearLayout
        android:id="@+id/predict1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tekspanduan2"
        android:background="@drawable/shape_controling">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:layout_weight="0.4"
            android:layout_marginStart="10dp"
            android:text="Harvest Time Estimation"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="@font/intersemibold"
            android:text=":"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:fontFamily="@font/intersemibold"
            android:text="0 Days"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/predict2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/predict1"
        android:background="@drawable/shape_controling"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:layout_weight="1.4"
            android:layout_marginStart="10dp"
            android:text="Plant Health"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/intersemibold"
            android:text=":"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/intersemibold"
            android:text="0%"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/predict3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/predict2"
        android:background="@drawable/shape_controling"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/intersemibold"
            android:layout_weight="0.3"
            android:layout_marginStart="10dp"
            android:text="Probability Of Crop Failure"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/intersemibold"
            android:text=":"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/intersemibold"
            android:text="0%" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttonpict"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/predict3"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/uplaodpict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/upload"
            android:contentDescription="@string/uploadpict"/>
        <ImageButton
            android:id="@+id/takeapict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@drawable/take"
            android:contentDescription="@string/takeapict"/>
    </LinearLayout>
</RelativeLayout>